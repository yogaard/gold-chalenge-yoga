    <script defer src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script
      defer
      src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"
    ></script>
    <script
      defer
      src="https://cdn.datatables.net/2.0.1/js/dataTables.js"
    ></script>
    <script
      defer
      src="https://cdn.datatables.net/2.0.1/js/dataTables.bootstrap5.js"
    ></script>
    <script defer src="scripts.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-secondary sticky-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/views/index.ejs">WORKSHOP Studio</a>
      </div>
    </nav>
    <div class="front">
      <h3>Unit breakdown hari ini</h3>
    </div>

    <!-- <button id="callFormButton "></button> -->
    <button id="callFormButton" type="button" class="btn btn-dark mt-5 ml-5">
      Data Baru
    </button>

    <div>
      <table id="example" class="table table-striped" style="width: 100%">
        <thead>
          <tr>
            <th>Code Number</th>
            <th>Hour Meter</th>
            <th>Date in</th>
            <th>Time in</th>
            <th>Time out</th>
            <th>Work Order</th>
            <th>Trouble</th>
            <th>PIC</th>
            <th>duration</th>
            <th>delete</th>
            <th>edit</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(row => { %>
          <tr>
            <td><%= row.code_number %></td>
            <td><%= row.hour_meter %></td>
            <td><%= row.date_in %></td>
            <td><%= row.time_in %></td>
            <td><%= row.time_out %></td>
            <td><%= row.no_WO %></td>
            <td><%= row.trouble %></td>
            <td><%= row.pic %></td>
            <td><%= row.duration %></td>

            <td>
              <!-- Tombol "Hapus" dengan atribut data-id -->
              <button type="button" class="delbut" data-id="<%= row.id %>">
                Hapus
              </button>
            </td>
            <td>
              <a href="/edit/<%= row.id %>" class="btn btn-secondary btn-sm"
                >Edit</a
              >
            </td>
          </tr>

          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- </div>
  </div> -->

    <script src="/script.js"></script>

